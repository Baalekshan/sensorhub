# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=sensorhub

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# JWT Authentication
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=1d
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key
JWT_REFRESH_EXPIRATION=7d

# OAuth2 Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

APPLE_CLIENT_ID=your_apple_client_id
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY=your_apple_private_key
APPLE_CALLBACK_URL=http://localhost:3001/auth/apple/callback

# Firebase Cloud Messaging (FCM)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_PRIVATE_KEY=your_firebase_private_key

# Web Push Notifications
WEB_PUSH_PUBLIC_KEY=your_web_push_public_key
WEB_PUSH_PRIVATE_KEY=your_web_push_private_key
WEB_PUSH_EMAIL=your_web_push_email

# Git Repository Configuration
GIT_REPO_URL=https://github.com/your-org/sensor-modules.git
GIT_REPO_BRANCH=main
GIT_REPO_USERNAME=your_git_username
GIT_REPO_PASSWORD=your_git_password
GIT_SYNC_INTERVAL=300000 # 5 minutes in milliseconds 