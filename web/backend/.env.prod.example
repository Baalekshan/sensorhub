# Server Configuration
PORT=3001
NODE_ENV=production

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=strong_password_here
POSTGRES_DB=sensorhub

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# JWT Authentication
JWT_SECRET=production_secret_key_change_this
JWT_EXPIRATION=1h
JWT_REFRESH_SECRET=production_refresh_key_change_this
JWT_REFRESH_EXPIRATION=7d

# CORS
CORS_ORIGINS=https://yourdomain.com,capacitor://app.domain

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=20

# Git Repository Configuration
GIT_REPO_URL=https://github.com/yourusername/sensor-modules.git
GIT_REPO_BRANCH=main
GIT_REPO_USERNAME=gituser
GIT_REPO_PASSWORD=gitpassword
GIT_SYNC_INTERVAL=600000 